{
  "version": 8,
  "name": "Basic",
  "sources": {
    "counties": {
      "type": "vector",
      "url": "mbtiles://{counties}"
    }
  },
  "glyphs": "fonts/{fontstack}/{range}.pbf",
  "sprite": "",
  "layers": [
    {
      "id": "county-fill",
      "type": "fill",
      "source": "counties",
      "source-layer": "counties", 
      "paint": {
        "fill-color": "#5a94c2",
        "fill-opacity": 0.6
      }
    },
    {
      "id": "county-outline",
      "type": "line",
      "source": "counties",
      "source-layer": "counties",
      "paint": {
        "line-color": "#2c3e50",
        "line-width": 1
      }
    }
  ]
}

